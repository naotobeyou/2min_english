      }

      clearInterval(timerInterval);
      socket.emit('force-end', roomId);

      try {
        await fetch('/mark-ended', { method: 'POST' });
        window.location.href = `/end/${roomId}`;
      } catch (err) {
        console.error('âŒ é€šè©±çµ‚äº†æ™‚ã® fetch ã‚¨ãƒ©ãƒ¼:', err);
        alert('é€šè©±çµ‚äº†ã«å¤±æ•—ã—ã¾ã—ãŸã€‚å†èª­ã¿è¾¼ã¿ã—ã¦ãã ã•ã„ã€‚');
